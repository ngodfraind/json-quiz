{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "allOf": [
    {
      "$ref": "http://json-quiz.github.io/json-quiz/schemas/question/base/schema.json"
    },
    {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "properties": {
        "type": {
          "enum": ["application/x.selection+json"]
        },
        "text": {
          "type": "string"
        }
      }
    },
    {
      "oneOf": [
        {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "type": "object",
          "properties": {
            "mode": {
              "enum": ["highlight"]
            },
            "colors": {
              "type": "array",
              "minItems": 2,
              "uniqueItems": true,
              "items": {
                 "type": "object",
                 "properties": {
                   "id": {
                     "type": "string"
                   },
                   "code": {
                     "type": "string"
                   }
                 }
              },
              "required": ["id", "code"]
            },
            "selections": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "begin": {
                    "type": "integer"
                  },
                  "end": {
                    "type": "integer"
                  }
                },
                "required": ["id", "begin", "end"]
              }
            },
            "solutions": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "object",
                "properties": {
                  "selectionId": {
                    "type": "string"
                  },
                  "answers": {
                    "type": "array",
                    "minItems": 1,
                    "uniqueItems": true,
                    "items": {
                      "type": "object",
                      "properties": {
                        "colorId": {
                          "type": "string"
                        },
                        "score": {
                          "type": "number"
                        }
                      },
                      "required": ["score", "colorId"]
                    }
                  }
                },
                "required": ["selectionId", "answers"]
              }
            }
          },
          "required": ["mode"]
        },
        {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "type": "object",
          "properties": {
            "mode": {
              "enum": ["find"]
            },
            "tries": {
              "type": "integer",
              "minimum": 1
            },
            "solutions": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "object",
                "properties": {
                  "selectionId": {
                    "type": "string"
                  },
                  "begin": {
                    "type": "integer"
                  },
                  "end": {
                    "type": "integer"
                  },
                  "score": {
                    "type": "number"
                  }
                },
                "required": ["selectionId", "begin", "end", "score"]
              }
            }
          },
          "required": ["mode"]
        },
        {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "type": "object",
          "properties": {
            "mode": {
              "enum": ["select"]
            },
            "selections": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "begin": {
                    "type": "integer"
                  },
                  "end": {
                    "type": "integer"
                  }
                },
                "required": ["id", "begin", "end"]
              }
            },
            "solutions": {
              "type": "array",
              "minItems": 1,
              "uniqueItems": true,
              "items": {
                "type": "object",
                "properties": {
                  "selectionId": {
                    "type": "string"
                  },
                  "score": {
                    "type": "number"
                  }
                },
                "required": ["selectionId", "score"]
              }
            }
          },
          "required": ["mode"]
        }
      ]
    }
  ]
}
